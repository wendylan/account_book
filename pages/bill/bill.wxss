/* pages/bill/bill.wxss */
.content{
    margin: 10px;
    margin-bottom: 50px;
}
.text_blue{
    color: #1D8CE0;
    margin-top: 30px;
}
.no_bill{
    color: #666;
    font-size: 14px;
}

.font_bold{
    font-weight: bold;
}
.bill_item{
    border-bottom:1px solid #dedede; 
    margin-top: 20rpx;
}
.information_box text{
    color: red;
    display: inline-block;
}
.information_box .text_right{
    float: right;
}
.time_box{
   font-size: 28rpx;
   text-align: right; 
   color:#999;
}
.time_box text{
    margin-right: 20rpx;
}
.icon_box{
    display: inline-block; 
    float: left;
}

.fix_box{
    position:fixed;
    left:0;
    bottom:0;
    background: #eeeeee;
    width: 100%;
    height: 30px;
    line-height: 30px;
    z-index: 3;
    text-align: center;
}
.fix_box text{
    margin: 0 15rpx;
}

.right_fix{
    padding: 20px;
    z-index: 6;
    position: fixed;
    right: 0;
    top: 40px;
    background: cadetblue;
    font-size: 14px;
    color: #fff;
}
.clear_box{
    clear: both;
}
.section__title{
    display: inline-block;
    height: 30px;
    line-height: 30px;
}
.right{
    display: inline-block;
    float: right;
    font-size: 18px;
}

.check_box{
    display: flex;
    margin-top: 10px;
}
.button_box{
    margin-top: 30px;
    text-align: center;
}
.button_box button{
    display: inline-block;
    line-height: 30px;
    margin-right: 30px;
}