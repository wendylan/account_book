/* pages/bill/bill.wxss */
.content{
    margin: 10px;
    margin-bottom: 50px;
}
.text_blue{
    color: #1D8CE0;
}
.no_bill{
    color: #666;
    font-size: 14px;
}

.font_bold{
    font-weight: bold;
}
.bill_item{
    border-bottom:1px solid #dedede; 
    margin-top: 20rpx;
}
.information_box text{
    color: red;
    display: inline-block;
}
.information_box .text_right{
    float: right;
}
.time_box{
   font-size: 28rpx;
   text-align: right; 
   color:#999;
}
.time_box text{
    margin-right: 20rpx;
}
.icon_box{
    display: inline-block; 
    float: left;
}

.fix_box{
    position:fixed;
    left:0;
    bottom:0;
}
.fix_box text{
    margin: 0 15px;
}